---
import "/node_modules/modern-normalize/modern-normalize.css";

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
		/>
		<meta http-equiv="X-UA-Compatible" content="ie=edge" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style lang="scss" is:global>
	:root {
		--foregroundColor: #434343;
		--space: in oklab;
	}
	body {
		height: 100vh;
		color: var(--foregroundColor);
		-webkit-overflow-scrolling: touch;
		-webkit-tap-highlight-color: transparent;
		background: linear-gradient(57.595deg var(--space), rgba(219,235,255,1), rgba(255,0,0,0) 77.481%),linear-gradient(115.19deg var(--space), rgba(219,255,248,1), rgba(0,255,0,0) 77.481%),linear-gradient(172.785deg var(--space), rgba(219,235,255,1), rgba(0,0,255,0) 77.481%);
	}
</style>
